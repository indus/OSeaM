{
  "version": 8,
  "name": "oseam",
  "sprite": "sprite",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v6"
    },
    "oseam": {
      "type": "vector",
      "tiles": [ "http://vectortiles.195.37.132.70.xip.io/data/oseam/{z}/{x}/{y}.pbf" ],
      "minzoom": 6,
      "maxzoom": 8
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#B5D0D0" }
    },
    {
      "id": "water",
      "source": "mapbox",
      "source-layer": "water",
      "type": "fill",
      "paint": { "fill-color": "#B5D0D0" }
    },
    {
      "id": "boundaries",
      "source": "mapbox",
      "source-layer": "admin",
      "type": "line",
      "paint": {
        "line-color": "#797979",
        "line-dasharray": [ 2, 2, 6, 2 ]
      },
      "filter": [
        "all",
        [ "==", "maritime", 0 ]
      ]
    },
    {
      "id": "buoy_lateral_pillar",
      "source": "oseam",
      "source-layer": "buoy_lateral",
      "type": "symbol",
      "layout": {
        "icon-image": "{shape}{colour}",
        "icon-allow-overlap": true,
        "icon-offset": [ 1, -18 ],
        "icon-rotate": 0.1
      },
      "filter": [ "==", "shape", "pillar" ]
    },
    {
      "id": "buoy_special_purpose_pillar",
      "source": "oseam",
      "source-layer": "buoy_special_purpose",
      "type": "symbol",
      "layout": {
        "icon-image": "{shape}{colour}",
        "icon-allow-overlap": true,
        "icon-offset": [ 1, -18 ],
        "icon-rotate": 0.1
      },
      "filter": [ "==", "shape", "pillar" ]
    },
    {
      "id": "buoy_special_purpose_barrel",
      "source": "oseam",
      "source-layer": "buoy_special_purpose",
      "type": "symbol",
      "layout": {
        "icon-image": "{shape}{colour}",
        "icon-allow-overlap": true,
        "icon-offset": [-1,-4],
        "icon-rotate": 0.1
      },
      "filter": [ "==", "shape", "barrel" ]
    },
    {
      "id": "buoy_lateral_spar",
      "source": "oseam",
      "source-layer": "buoy_lateral",
      "type": "symbol",
      "layout": {
        "icon-image": "{shape}{colour}",
        "icon-allow-overlap": true,
        "icon-offset": [-1,-4],
        "icon-rotate": 0.1
      },
      "filter": [ "==", "shape", "spar" ]
    }
  ]
}
